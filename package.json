{
  "name": "cross-platform-library-starter",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run prod:build && npm run dev:build",

    "// production build": "",
    "prod:build": "npm run prod:build:web && npm run prod:build:native",
    "prod:build:web": "PLATFORM=web vite build",
    "prod:build:native": "PLATFORM=native vite build",

    "// development build": "",
    "dev:build": "npm run dev:build:web && npm run dev:build:native",
    "dev:build:web": "PLATFORM=web vite build -m development",
    "dev:build:native": "PLATFORM=native vite build -m development"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.9.2",
    "typescript": "5.3.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.3"
  }
}
